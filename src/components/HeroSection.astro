---
import SearchBar from './SearchBar.astro';
import { Leaf, Activity, Heart } from 'lucide-astro';
---

<section class="relative bg-gradient-to-br from-primary-600 to-primary-800 py-32 overflow-hidden">
  <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
  <div class="absolute inset-0 bg-black opacity-20"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center space-y-8">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
        Discover Your Perfect
        <span class="relative">
          Cannabis Strain
          <div class="absolute -bottom-2 left-0 w-full h-1 bg-gradient-to-r from-primary-300 to-transparent"></div>
        </span>
      </h1>
      
      <p class="text-xl text-white/90 max-w-2xl mx-auto mb-12">
        Explore our comprehensive database of cannabis strains, effects, and medical benefits
      </p>

      <SearchBar />

      <div class="flex flex-wrap justify-center gap-8 mt-16">
        <div class="flex items-center gap-3 text-white/90">
          <Leaf class="w-6 h-6" />
          <span>500+ Strains</span>
        </div>
        <div class="flex items-center gap-3 text-white/90">
          <Activity class="w-6 h-6" />
          <span>Detailed Effects</span>
        </div>
        <div class="flex items-center gap-3 text-white/90">
          <Heart class="w-6 h-6" />
          <span>Medical Benefits</span>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute bottom-0 inset-x-0 h-40 bg-gradient-to-t from-gray-50 to-transparent"></div>
</section>