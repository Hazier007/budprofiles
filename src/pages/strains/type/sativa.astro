---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import StrainGrid from '../../../components/StrainGrid.astro';
import StrainTypeHero from '../../../components/StrainTypeHero.astro';
import { strains } from '../../../data/strains';

const sativaStrains = strains.filter(strain => strain.type === 'Sativa');
---

<Layout title="Sativa Cannabis Strains - CannaGuide">
  <Header />
  <StrainTypeHero type="Sativa" />
  
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <StrainGrid strains={sativaStrains} />
  </main>

  <Footer />
</Layout>